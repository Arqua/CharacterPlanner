        size: 600, 30
        pos: 100, 570
    BoxLayout:
        orientation:'horizontal'
        size: 800, 170
        pos: root.x, 400
        canvas:
            Color:
                rgba: (.588,.666,.682,.55)
            Rectangle:
                pos: self.pos
                size:self.size
    Label:
        text: 'Current Level: '
        font_size: 24
        size: 100, 30
        pos: 325, 525
        color: .62,.078,.92,.75
    Label:
        text:'Alliance'
        font_size:12
        size:100,30
        pos: 35, 400
        color: .145,.102,.878,.55
    CheckBox:
        pos:.5, 365
        color: .145,.102,.878,1
    Label:
        text:'Horde'
        font_size:12
        size:100,30
        pos: 665, 400
        color: .741, .078,.109, .7
    CheckBox:
        pos:695, 365
        color: .741, .078,.109, 1
    Label:
        text: 'Quest and Monsters'
        font_size: 12
        size: 600, 30
        pos: 100,370
    BoxLayout:
        size: 450, 365
        pos:0, 0
        #orientation: 'vertical'
        #need to add height and width
        Image:
            source: 'parchment.jpg'
            size:450, 365
    BoxLayout:
        orientation: 'horizontal'
        pos:450,0
        size:450, 365
        canvas:
            Color:
                rgb: (.043,.109,.121)
            Rectangle:
                pos: self.pos
                size:self.size
    #Button:
        #text:'Gear Planner'
        #font_size:5
        #size: 40,20
        #pos: 760,0
    ProgressBar:
        size: 400, 20
        pos: 200, 500
<SelectableLabel>:
    #Draw a background to indicate selection
    canvas.before:
        Color:
            rgba:(.0, 0.9, .1, .3) if self.selected else (0,0,0,1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, none
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True